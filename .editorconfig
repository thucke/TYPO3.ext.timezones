# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[{*.rst,*.rst.txt}]
indent_style = space
indent_size = 3

# MD-Files
[*.md]
indent_style = space
indent_size = 4

# CSS-Files
[*.css]
indent_style = tab

# HTML-Files
[*.html]
indent_style = tab
indent_size = 2

# JS-Files
[*.js]
indent_style = space
indent_size = 2

# PHP-Files
[*.php]
indent_style = space

# TypoScript
[*.typoscript]
indent_style = space
indent_size = 2

# XLF-Files
[*.xlf]
indent_style = tab

# SQL-Files
[*.sql]
indent_style = tab
indent_size = 2

# .htaccess
[{_.htaccess,.htaccess,*.xml}]
indent_style = tab
