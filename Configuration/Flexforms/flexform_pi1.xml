			<ROOT>
				<TCEforms>
					<sheetTitle>LLL:EXT:th_rating/Resources/Private/Language/locallang.xlf:flexform.sheet_general</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<switchableControllerActions>
						<TCEforms>
							<onChange>reload</onChange>
							<label>LLL:EXT:th_rating/Resources/Private/Language/locallang.xlf:flexform.general_actions</label>
							<config>
								<type>select</type>
								<items>
									<numIndex index="0">
										 <numIndex index="0">LLL:EXT:th_rating/Resources/Private/Language/locallang.xlf:flexform.general_actions_1</numIndex>
										 <numIndex index="1">Vote->show</numIndex>
									</numIndex>
									<numIndex index="1">
										<numIndex index="0">LLL:EXT:th_rating/Resources/Private/Language/locallang.xlf:flexform.general_actions_2</numIndex>
										<numIndex index="1">Vote->ratinglinks</numIndex>
									</numIndex>
									<numIndex index="2">
										 <numIndex index="0">LLL:EXT:th_rating/Resources/Private/Language/locallang.xlf:flexform.general_actions_3</numIndex>
										 <numIndex index="1">Vote->new</numIndex>
									</numIndex>
									<numIndex index="3">
										 <numIndex index="0">LLL:EXT:th_rating/Resources/Private/Language/locallang.xlf:flexform.general_actions_4</numIndex>
										 <numIndex index="1">Vote->index</numIndex>
									</numIndex>									
									<numIndex index="4">
										<numIndex index="0">LLL:EXT:th_rating/Resources/Private/Language/locallang.xlf:flexform.general_actions_5</numIndex>
										<numIndex index="1">Vote->polling</numIndex>
									</numIndex>
									<numIndex index="5">
										<numIndex index="0">LLL:EXT:th_rating/Resources/Private/Language/locallang.xlf:flexform.general_actions_6</numIndex>
										<numIndex index="1">Vote->mark</numIndex>
									</numIndex>
								</items>
						  </config>
						</TCEforms>
					</switchableControllerActions>
					<settings.display>
						<TCEforms>
							<displayCond>
								<OR>
									<numIndex index="0">FIELD:switchableControllerActions:=:Vote->ratinglinks</numIndex>
									<numIndex index="1">FIELD:switchableControllerActions:=:Vote->polling</numIndex>
									<numIndex index="2">FIELD:switchableControllerActions:=:Vote->mark</numIndex>
								</OR>
							</displayCond>
							<label>LLL:EXT:th_rating/Resources/Private/Language/locallang.xlf:flexform.general_display</label>
							<config>
								<type>select</type>
								<itemsProcFunc>Thucke\ThRating\Service\TCALabelUserFuncService->dynFlexRatinglinkConfig</itemsProcFunc>
							</config>							
						</TCEforms>
					</settings.display>
					<settings.showNotRated>
						<TCEforms>
							<label>LLL:EXT:th_rating/Resources/Private/Language/locallang.xlf:flexform.general_showNotRated</label>
							<config>
								<type>check</type>
							</config>							
						</TCEforms>
					</settings.showNotRated>
					<settings.cookieLifetime>
						<TCEforms>
							<label>LLL:EXT:th_rating/Resources/Private/Language/locallang.xlf:flexform.general_cookieLifetime</label>
							<config>
								<type>input</type>
								<size>4</size>
								<max>4</max>
								<eval>trim,int,num,nospace</eval>
							</config>							
						</TCEforms>
					</settings.cookieLifetime>
				</el>
			</ROOT>
		</sDEF>
