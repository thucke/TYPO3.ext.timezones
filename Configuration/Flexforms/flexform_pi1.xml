					</settings.fluid.partials.usersRating.showTextInfo>
					<settings.fluid.partials.usersRating.showGraphicInfo>
						<TCEforms>
							<displayCond>FIELD:settings.fluid.layouts.default.showSummary:REQ:true</displayCond>
							<label>LLL:EXT:th_rating/Resources/Private/Language/locallang.xlf:flexform.fluid.partialUsersRatingConfig_showGraphicInfo</label>
							<config>
								<type>check</type>
							</config>							
						</TCEforms>
					</settings.fluid.partials.usersRating.showGraphicInfo>
				</el>
