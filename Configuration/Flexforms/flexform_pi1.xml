							<displayCond>FIELD:settings.fluid.templates.ratinglinks.likesMode:REQ:true</displayCond>
							<label>LLL:EXT:th_rating/Resources/Private/Language/locallang.xlf:flexform.fluid.partialUsersRatingConfig_showGraphicInfo</label>
							<config>
